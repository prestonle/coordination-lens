{
  "manifest_version": 3,
  "name": "CoordinationLens",
  "version": "0.2.0",
  "description": "See AI coordination in real-time",
  "permissions": ["activeTab", "storage"],
  "action": {
    "default_popup": "popup/index.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content.js"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "web_accessible_resources": [
    {
      "resources": ["content/three.min.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
