{
  "manifest_version": 3,
  "name": "CoordinationLens",
  "version": "0.1.0",
  "description": "See AI coordination in real-time",
  "permissions": ["activeTab", "storage", "downloads"],
  "action": {
    "default_popup": "popup/popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://chatgpt.com/*", 
        "https://chat.openai.com/*", 
        "https://claude.ai/*",
        "https://*.claude.ai/*"
      ],
      "js": ["content/content.js"],
      "run_at": "document_idle"
    }
  ]
}
